# ============================================
# REQUIRED ENVIRONMENT VARIABLES
# ============================================
# These variables are REQUIRED for the app to run.
# Copy this file to .env and fill in the values.

# Supabase Configuration (REQUIRED)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# AI Microservice Configuration (REQUIRED for Food Vision features)
# For production, use your deployed backend URL
# Options: VITE_AI_MICROSERVICE_URL or VITE_AI_SERVICE_URL (both supported)
# Example: https://your-backend.onrender.com or https://your-backend.onrender.com/api/ai
VITE_AI_MICROSERVICE_URL=https://your-backend-url.com
# OR (alternative variable name):
# VITE_AI_SERVICE_URL=https://your-backend-url.com

# ============================================
# OPTIONAL ENVIRONMENT VARIABLES
# ============================================

# AI Service API Key (optional, if your backend requires authentication)
VITE_AI_SERVICE_API_KEY=your_ai_service_api_key

# AI Provider Keys (optional, only if using client-side AI calls)
# WARNING: These should NOT be used in production client-side code
VITE_OPENAI_API_KEY=your_openai_api_key
VITE_GEMINI_API_KEY=your_gemini_api_key

# Environment
VITE_APP_ENV=development
VITE_APP_VERSION=1.0.0